<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:focusableInTouchMode="true"
        app:cardBackgroundColor="#e1e5e7"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">
            <ImageView
                android:id="@+id/btnPlus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/btnMinus"
                android:layout_toEndOf="@+id/txtSize"
                android:src="@drawable/positive" />
            <ImageView
                android:id="@+id/btnMinus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/negative"/>
            <EditText
                android:id="@+id/txtSize"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/btnMinus"
                android:background="@drawable/border_with_line"
                android:enabled="false"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/karbamaPrimary" />

            <TextView
                android:id="@+id/lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="7dp"
                android:text="کت و شلوار"
                android:textColor="#000000"
                android:textSize="15sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>